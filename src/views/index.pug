html
  head
    title= title
    include includes/head
  body
    include includes/header
    main
      div
        h1= message
      hr
      if user && user.name
        div
          p Welcome #{user.name}
          a(href='/profile') Profile
      else
        .home-options
          .home-option.sign-up
            a.waves-effect.waves-light.pink.darken-4.btn(href='/signup') Local Sign Up
          .home-option.log-in
            a.waves-effect.waves-light.pink.darken-4.btn(href='/login') Local Log In
    include includes/footer
