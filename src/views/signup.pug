html
  head
    title= title
  body
    div
      if message
        p= message
      form(action='/signup', method='post')
        .form-group
          label Email
          input.form-control(type='text', name='email')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        button(type='submit') Signup
      hr
      div
        a(href='/') Home
      div
        | Already have an account?&nbsp
        a(href='/login') Log in
